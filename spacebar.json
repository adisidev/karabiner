{
  "title": "Spacebar to right_command upon hold, space upon hold",
  "rules": [
    {
    "description": "Makes spacebar behave like right_command upon holding, space upon tap.",
    "manipulators": [
      {
      "from": {
        "key_code": "spacebar",
        "modifiers": {
          "optional": [
            "any"
          ]
        }
      },
      "to_if_held_down": [
        {
        "key_code": "right_command"
      }
      ],
      "to_if_alone": [
        {
        "key_code": "spacebar"
      }
      ],
      "type": "basic"
    }
    ]
  }
  ]
}
