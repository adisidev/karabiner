{
  "title": "Shift to Parenthesis upon tap, shift upon hold",
  "rules": [
    {
    "description": "Makes shift behave like shift upon holding, parenthesis upon tap.",
    "manipulators": [
      {
      "from": {
        "key_code": "left_shift"
      },
      "to": [
        {
        "key_code": "left_shift"
      }
      ],
      "to_if_alone": [
        {
        "key_code": "9",
        "modifiers": [
          "left_shift"
        ]
      }
      ],
      "type": "basic"
    },
      {
      "from": {
        "key_code": "right_shift"
      },
      "to": [
        {
        "key_code": "right_shift"
      }
      ],
      "to_if_alone": [
        {
        "key_code": "0",
        "modifiers": [
          "right_shift"
        ]
      }
      ],
      "type": "basic"
    }
    ]
  }
  ]
}
